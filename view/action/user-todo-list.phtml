                                        <div class="col-md-3">
                                            <input type="text" name="deadline" placeholder="deadline (e.g. 2015-12-31 12:00:00)" data-user-id="<?php echo $this->user->id; ?>" data-todo-id="<?php echo $todo->id; ?>" value="<?php echo $todo->deadline; ?>">
