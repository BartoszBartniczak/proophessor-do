        </div>
    </div>
<?php endif; ?>

<script type="text/javascript">
    $(function () {
        $('body').on('click', '.glyphicon-unchecked', function()
        {
            var elem = $(this);
            $.postJSON(
                '<?php echo $this->url('command::mark-todo-as-done') ?>',
                {
                    todo_id : $(this).data('id'),
                    status : "done"
                }
            ).then(
                function () {
                    elem.toggleClass('glyphicon-unchecked').toggleClass('glyphicon-check text-success');
                },
                $.failNotify
            );
        });

        $('body').on('click', '.add-deadline', function(e) {
            var el = $(this).prev();

            e.preventDefault();
            $.postJSON(
                '<?php echo $this->url('command::add-deadline-to-todo') ?>',
                {
                    todo_id: el.data('todo-id'),
                    user_id: el.data('user-id'),
                    deadline: el.val()
                }
            );
        });
    });
</script>
