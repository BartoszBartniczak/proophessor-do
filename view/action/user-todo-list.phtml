                                        <div class="col-md-3">
                                            add reminder
                                        </div>
                                        <div class="col-md-1 text-right">
                                            <span class="glyphicon glyphicon-<?php echo ($todo->status == "done")? "check text-success" : (($todo->status == "expired")? "warning-sign text-danger" : "unchecked") ?>" data-id="<?php echo $todo->id; ?>"></span>
